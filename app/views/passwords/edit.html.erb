<h1>Edit password</h1>

<%= form_with model: Current.user, url: password_path do |form| %>
<%= render partial: "shared/errors", locals: {form: form} %>

<div class="mb-3">
  <%= form.label :password %>
  <%= form.password_field :password, class: "form-control", placeholder: "password" %>
</div>
<div class="mb-3">
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password confirmation" %>
</div>

<div class="mb-3">
  <%= form.submit "Update Password", class: "btn btn-primary" %>
</div>
<% end %>